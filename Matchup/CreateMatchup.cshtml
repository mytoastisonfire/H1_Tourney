@page
@model TourneyPlaner.Pages.Matchup.CreateMatchupModel
@{
}
<br />
<h2>Create Matchup</h2>
<br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class"text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupCreate.startDateTime"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupCreate.startDateTime" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupCreate.startDateTime"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupCreate.rounds"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupCreate.rounds" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupCreate.rounds"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupCreate.tournamentId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupCreate.tournamentId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupCreate.tournamentId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupCreate.nextMatchupId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupCreate.nextMatchupId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupCreate.nextMatchupId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>