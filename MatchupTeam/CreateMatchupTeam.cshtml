@page
@model TourneyPlaner.Pages.MatchupTeam.CreateMatchupTeamModel
@{
}
<br />
<h2>Create Matchup Team</h2>
<br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class"text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupTeamCreate.score"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupTeamCreate.score" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupTeamCreate.score"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupTeamCreate.teamId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupTeamCreate.teamId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupTeamCreate.teamId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MatchupTeamCreate.matchupId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MatchupTeamCreate.matchupId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MatchupTeamCreate.matchupId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>